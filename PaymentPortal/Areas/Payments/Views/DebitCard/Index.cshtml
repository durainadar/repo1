@model IEnumerable<PaymentPortal.Models.DebitCard>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DebitCardNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DebitCardNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DebitCardID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DebitCardID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DebitCardID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
